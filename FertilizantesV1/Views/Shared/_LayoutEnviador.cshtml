<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FertiTec</title>

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link rel="icon" type="image/x-icon" href="~/assets/img/favicon.png">


    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">

    <link href="~/Content/nav.css" rel="stylesheet">
    <link href="~/Content/font.css" rel="stylesheet">

</head>
<body class="compras">
    <!-- ======= Header ======= -->
    <header id="header" class="d-flex align-items-center">
        <div class="container d-flex align-items-center">
            <div class="d-flex align-items-center me-auto gap-3">
                <h1 class="logo">@Html.ActionLink("FertiTec", "Index", "HomeEnviador")</h1>

                <nav id="navbar" class="navbar">
                    <ul>
                        <li class="dropdown">
                            <a href="#"><span>Paqueterías</span> <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li>@Html.ActionLink("Agregar", "Create", "paqueterias", null, new { id = "add" })</li>
                                <li>@Html.ActionLink("Ver todas", "Index", "paqueterias", null, new { id = "list" })</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#"><span>Envíos</span> <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li>@Html.ActionLink("Detalles", "DetallesEnvio", "Envios", null, new { id = "add" })</li>
                                <li>@Html.ActionLink("Cambio de Status", "CambioStatus", "Envios", null, new { id = "list" })</li>
                            </ul>
                        </li>
                    </ul>
                    <i class="bi bi-list mobile-nav-toggle"></i>
                </nav><!-- .navbar -->
            </div>
            @Html.Partial("_LoginPartialEnviador")
        </div>
    </header><!-- End Header -->
    <!-- -->

    <div class="">
        @RenderBody()
        <footer>
            <!--<p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>-->
        </footer>
    </div>

    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="container">
            <h3>FertiTec</h3>
            <p>Todo en fertilizantes.</p>
            <div class="social-links">
                <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
            </div>
            <div class="copyright">
                &copy; Copyright 2022 - <strong><span>FertiTec</span></strong>. Todos los derechos reservados
            </div>
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>
</body>
</html>
