@model IEnumerable<FertilizantesV1.Models.paqueteria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEnviador.cshtml";
}
<div class="container">

    <h2 class="mb-3">Paqueterías registradas</h2>

    <p class="mb-5">
        @Html.ActionLink("Crear nueva paquetería", "Create", new { area = "" }, new { @class = "btn btn-success" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rfc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.web)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contacto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tel_contacto)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rfc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.web)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contacto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tel_contacto)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.id_paqueteria }, new { @class = "btn btn-warning mb-1 d-block w-100" })
                @Html.ActionLink("Detalles", "Details", new { id=item.id_paqueteria }, new { @class = "btn btn-info mb-1 d-block w-100" })
                @Html.ActionLink("Eliminar", "Delete", new { id=item.id_paqueteria }, new { @class = "btn btn-danger mb-1 d-block w-100" })
            </td>
        </tr>
    }

    </table>
</div>

