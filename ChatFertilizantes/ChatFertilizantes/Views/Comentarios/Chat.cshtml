
@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/_LayoutSoporte.cshtml";
}

<style type="text/css">

    #discussion {
        text-align: left;
        margin: 0 auto;
        margin-bottom: 25px;
        padding: 10px;
        background: #fff;
        height: 270px;
        width: 430px;
        border: 1px solid #ACD8F0;
        overflow: auto;
    }

    #wrapper, #loginform {
        margin: 0 auto;
        padding-bottom: 25px;
        background: #EBF4FB;
        width: 504px;
        border: 1px solid #ACD8F0;
    }

    #loginform {
        padding-top: 18px;
    }

        #loginform p {
            margin: 5px;
        }

    #message {
        width: 395px;
        border: 1px solid #ACD8F0;
        margin: 0 auto;
        margin-bottom: 25px;
    }

    #menu {
        padding: 12.5px 25px 12.5px 25px;
    }

    #sendmessage {
        width: 70px;
    }

    .centro {
        align-items: center;
        justify-content: center;
    }
</style>

<br />
<hr />
<div class="container">

    <h3>Chat de asistencia online</h3>
    <div id="wrapper">
        <div id="menu">
            <br />
            <br />
            <div style="clear:both"></div>
        </div>


        <div class="row chatbox">
            <ul id="discussion"></ul>
            <br />
        </div>
        <div class="row">
            <div class="col-lg-12">
                <input type="text" class="form-control" id="message" />
                <br />
            </div>

        </div>
        <div class="row centro">
            <div class="col-lg-12">
                <input type="text" class="btn btn-outline-success" id="sendmessage" value="Enviar" />

            </div>
        </div>

    </div>








</div>

<input type="hidden" id="displayname" />

@section scripts{
    <script src="~/Scripts/jquery.signalR-2.4.3.js"></script>

    <script src="/signalr/hubs"></script>

    <script type="text/javascript">

        $(function () {
            var chat = $.connection.chatHub;

            chat.client.sendChat = function (name, message) {
                var divName = $("<div/>").text(name).html();
                var divMessage = $("<div/>").text(message).html();

                $("#discussion").append("<li><strong>" + divName + ":<strong> " + divMessage + "</li>");
            };


            var nameOwner = "Rogelio";
            $("#displayname").val(nameOwner);


            $("message").focus();

            $.connection.hub.start().done(function () {
                $("#sendmessage").click(function () {

                    var nameOwner = $("#displayname").val();
                    var messageText = $("#message").val();


                    chat.server.send(nameOwner, messageText);

                    $("#message").val("").focus();

                })

            })

        }
        )


    </script>

}

