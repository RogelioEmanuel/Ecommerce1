<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FertiTec</title>
    <!-- Favicons -->
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/assets/img/favicon.png">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet" />
    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/animate.css/animate.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" />
    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/nav.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/font.css" />
    <link rel="stylesheet" href="~/Content/menuResponsivo.css" />
</head>
<body style="padding: 0; display: flex; flex-direction: column; justify-content: space-between; min-height: 100vh;">
    <!-- ======= HeaderNormall ======= -->
    <header id="header" class="d-flex align-items-center">
        <div class="container d-flex align-items-center">
            <div class="d-flex align-items-center me-auto">
                <h1 class="logo">@Html.ActionLink("FertiTec", "Index", "Home")</h1>
                <nav id="navbar" class="navbar">
                    <ul>
                        <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link scrollto active" })</li>
                        <li>@Html.ActionLink("Chat", "Chat", "Comentarios", new { area = "" }, new { @class = "nav-link scrollto" })</li>
                        <li>@Html.ActionLink("Comentarios", "Index", "Comentarios", new { area = "" }, new { @class = "nav-link scrollto" })</li>
                        
                        <li>
                            @using (Html.BeginForm("BuscaProd", "Catalogo", FormMethod.Post, new { @class = "form-inline" }))
                            {
                                <input class="form-control" id="nomBuscar" name="nomBuscar" type="text" placeholder="Buscar producto" aria-label="Search">
                                <button class="btn btn-success" type="submit" value="submit">Buscar</button>
                            }
                        </li>
                    </ul>
                    <!--<i class="bi bi-list mobile-nav-toggle"></i>-->
                </nav><!-- .navbar -->
            </div>
            @Html.Partial("_LoginPartial")
        </div>
    </header><!-- End Header -->
    <div class="" style="flex: 1;">
        @RenderBody()
    </div>








    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="container">
            <h3>FertiTec</h3>
            <p>Todo en fertilizantes.</p>
            <div class="social-links">
                <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
            </div>
            <div class="copyright">
                &copy; Copyright 2022 - <strong><span>FertiTec</span></strong>. Todos los derechos reservados
            </div>
        </div>
    </footer>
    <!--<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>-->
    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <!-- Template Main JS File -->
    <!--<script src="~/assets/js/main.js"></script>-->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
